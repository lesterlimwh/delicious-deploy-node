mixin review(review)
	.review__header
		.review__author
			- const authorProfile = review.author.profile ? `/profiles/${review.author.profile}` : '/profiles/default.png'
			img.avatar(src=authorProfile)
			p= review.author.name
		.review__stars(title=`Rated ${review.rating} out of 5 stars`)
			= `★`.repeat(review.rating)
			= '☆'.repeat(5 - review.rating)
		time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
	.review__body
		p= review.text